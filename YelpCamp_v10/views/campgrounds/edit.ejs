<% include ../partials/header%>


<div class="container">
    <div class="row">
        <div class = "col-md-3"></div>
        <div class = "col-md-6">
            <h1 style="text-align:center;margin:25px auto;">Edit <%= campground.name%></h1>
            <form action = "/campgrounds/<%=campground._id %>?_method=PUT" method = "POST">
                <div class="form-group">
                    <input type="text" class="form-control" id = "name" name = "campground[name]" value= "<%= campground.name%>" placeholder = "name of image"></input>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" id = "url" name = "campground[image]" value= "<%= campground.image %>" placeholder = "image url"></input>
                </div >
                <div class="form-group">
                    <textarea type="text" rows="3" class="form-control" id = "description" name = "campground[description]"  placeholder = "description"> <%= campground.description %></textarea>
                </div >
                <div class="form-group">
                <button class=" btn btn-lg btn-primary btn-block">Update</button>
                </div>
                
                
                <a href="/campgrounds"> Go Back</a>

            </form>
        </div>
        <div class = "col-md-3"></div>
    </div>
    


</div>
